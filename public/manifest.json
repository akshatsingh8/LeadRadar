{
  "manifest_version": 3,
  "name": "LeadRadar - Google Maps Lead Extractor",
  "version": "1.0.0",
  "description": "Discover Business Leads Instantly | Extract unlimited leads from Google Maps with one click. Powered by brandspiritlabs.com",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.google.com/maps/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Google Maps Leads Scraper"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/maps/*"
      ],
      "js": [
        "assets/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}